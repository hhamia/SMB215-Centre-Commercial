<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.skynete10.shoproad.beforeCart"
    android:background="@drawable/bg"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">

        <ImageView
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:id="@+id/imgFilt"
            android:layout_row="0"
            android:layout_column="0"

            android:src="@android:drawable/ic_menu_rotate" />

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to cart"
        android:id="@+id/btnaddtocart"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="64dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/signup_btn_normal"
        android:textColor="@color/White"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button8"
        android:background="@drawable/signup_btn_normal"
        android:textColor="@color/White"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtprice"
        android:layout_row="1"
        android:layout_column="0"
        android:textSize="25dp"
        android:layout_below="@+id/gridLayout"
        android:layout_toEndOf="@+id/txtqty"
        android:textColor="@color/Maroon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtdesc"
        android:layout_row="1"
        android:layout_column="0"
        android:textSize="25dp"
        android:layout_below="@+id/txtprice"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/Maroon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Qty"
        android:id="@+id/textView4"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_alignBottom="@+id/txtqty"
        android:layout_alignParentStart="true"
        android:textColor="@color/Maroon"
        />

    <EditText
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtqty"
        android:layout_row="1"
        android:layout_column="2"
        android:inputType="number"
        android:layout_marginRight="48dp"
        android:layout_below="@+id/txtavqty"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtavqty"
        android:layout_row="1"
        android:layout_column="1"
        android:textSize="25dp"
        android:layout_below="@+id/txtdesc"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtprice"
        android:textColor="@color/Maroon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtname"
        android:layout_row="1"
        android:layout_column="0"
        android:textSize="25dp"
        android:layout_above="@+id/txtdesc"
        android:layout_alignParentStart="true"
        android:textColor="@color/Maroon"
        />
</RelativeLayout>
