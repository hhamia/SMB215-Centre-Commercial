<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.developer.animated.splashscreen"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/bag"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.android.developer.animated.splashscreen.SpalshScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.developer.animated.splashscreen.Register"
            android:label="@string/title_activity_register"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
        <activity
            android:name="com.android.developer.animated.splashscreen.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.android.developer.animated.splashscreen.Home"
            android:label="@string/title_activity_home" >
        </activity>
    </application>

</manifest>